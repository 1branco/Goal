<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardMaxElevation="4dp"
        card_view:cardElevation="2dp"
        card_view:contentPadding="5dp" android:layout_marginTop="10dp">
    <RelativeLayout
            android:id="@+id/ll"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:id="@+id/matchdayId"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchDateId"
                android:scaleType="centerCrop" android:layout_below="@+id/matchdayId"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchHomeTeamId"
                android:maxLines="1"
                android:layout_below="@+id/matchDateId"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchHomeTeamScoreId"
                android:maxLines="1"
                android:layout_below="@+id/matchDateId" android:layout_toEndOf="@+id/matchHomeTeamId"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/matchAwayTeamScoreId"
                android:layout_below="@+id/matchHomeTeamScoreId"
                android:maxLines="1"
                android:layout_toEndOf="@+id/matchAwayTeamId"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/matchAwayTeamId"
                android:layout_below="@+id/matchHomeTeamId"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>